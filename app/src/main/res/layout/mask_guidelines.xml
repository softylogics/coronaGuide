<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mask.MaskFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textStyle="bold"
    android:textSize="30sp"
    android:text="How to use Protection Mask during Covid-19 Pandemic"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/linkmask"

        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"

        android:textSize="10sp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/masklabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="When to use a mask "
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/maskA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="1: If you are healthy, you only need to wear a mask if you are taking care of a person with suspected 2019-nCoV infection.\n
            \n2: Wear a mask if you are coughing or sneezing.\n
            \n3: Masks are effective only when used in combination with frequent hand-cleaning with alcohol-based hand rub or soap and water.\n
            \n4: If you wear a mask, then you must know how to use it and dispose of it properly.\n"
            android:textAlignment="textStart"
            android:textSize="10sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/masklabe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="When and how to wear medical masks to protect against coronavirus"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/maskA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="1: Before putting on a mask, clean hands with alcohol-based hand rub or soap and water.\n
    \n2: Cover mouth and nose with mask and make sure there are no gaps between your face and the mask.\n
    \n3: Avoid touching the mask while using it; if you do, clean your hands with alcohol-based hand rub or soap and water.\n
    \n4: Replace the mask with a new one as soon as it is damp and do not re-use single-use masks.\n
    \n5: To remove the mask: remove it from behind (do not touch the front of mask); discard immediately in a closed bin; clean hands with alcohol-based hand rub or soap and water."
            android:textAlignment="textStart"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>